@page
@model BlogApp.Pages.Blogs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Blog.Title" class="control-label"></label>
                <input asp-for="Blog.Title" class="form-control" />
                <span asp-validation-for="Blog.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Blog.Content" class="control-label"></label>
                <input asp-for="Blog.Content" class="form-control" />
                <span asp-validation-for="Blog.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Blog.Author" class="control-label"></label>
                <input asp-for="Blog.Author" class="form-control" />
                <span asp-validation-for="Blog.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.PublishDate" class="control-label"></label>
                <input asp-for="Blog.PublishDate" class="form-control" />
                <span asp-validation-for="Blog.PublishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.CategoryId" class="control-label"></label>
                <select asp-for="Blog.CategoryId" class="form-control"
                        asp-items="@(ViewData["CategoryId"] as SelectList)">
                    <option value="">Kategori Seçiniz</option>
                </select>


            </div>
            
            <div class="form-group">
                <label>Görsel Yükle</label>
                <input type="file" name="ImageFile" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
